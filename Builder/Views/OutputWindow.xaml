<mah:MetroWindow x:Class="Builder.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Builder"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        xmlns:rsc="clr-namespace:RSCoreLib.WPF;assembly=RSCoreLib"
        Height="250" 
        Width="750"
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="2"
        Icon="../Images/vs/console16.png"  ShowIconOnTitleBar="False"
        Title="Output" ResizeMode="CanResize">
    <Grid>
        <TextBox Text="{Binding HistoryVM.Output, Mode=OneWay}" />
    </Grid>
</mah:MetroWindow>
